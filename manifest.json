{
  "manifest_version": 3,
  "name": "M3U8 Player",
  "version": "1.0",
  "description": "Detects .m3u8 streams and plays them in a distraction & ad free player.",
  "permissions": ["webRequest", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Grab M3U8"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
